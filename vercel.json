{
  "version": 2,
  "functions": {
    "api/**.js": { "runtime": "nodejs18.x" }
  },
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "^/(?!api).*", "dest": "/index.html" }
  ]
}


